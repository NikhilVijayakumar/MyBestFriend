<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dog_navigation"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.nikhil.mybestfriend.feature.auth.login.view.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_catListFragment"
            app:destination="@id/catListFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.nikhil.mybestfriend.feature.auth.register.view.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/catListFragment"
        android:name="com.nikhil.mybestfriend.feature.cat.listing.view.CatListFragment"
        android:label="fragment_cat_list"
        tools:layout="@layout/fragment_cat_list" >
        <action
            android:id="@+id/action_catListFragment_to_catDetailFragment"
            app:destination="@id/catDetailFragment" />
        <argument
            android:name="catDetails"
            app:argType="com.nikhil.mybestfriend.feature.cat.data.db.entity.CatEntity"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/catDetailFragment"
        android:name="com.nikhil.mybestfriend.feature.cat.details.view.CatDetailFragment"
        android:label="fragment_cat_detail"
        tools:layout="@layout/fragment_cat_detail" >
        <action
            android:id="@+id/action_catDetailFragment_to_catListFragment"
            app:destination="@id/catListFragment" />
    </fragment>
</navigation>